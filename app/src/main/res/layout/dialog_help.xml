<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

    <TextView
            android:id="@+id/help_dkma_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_dkma_message" />

    <Button
            android:id="@+id/help_dkma_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/help_dkma_button" />

    <TextView
            android:id="@+id/help_battery_optimization_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/help_battery_optimization_message" />

    <Button
            android:id="@+id/help_battery_optimization_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/help_battery_optimization_button" />
</LinearLayout>